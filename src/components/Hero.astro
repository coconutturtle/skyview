---
const { title, subtitle, ctaText, ctaLink, imageUrl } = Astro.props;
---

<section
  class="relative h-[75vh] flex items-center justify-center text-center overflow-hidden"
>
  <!-- Background image -->
  <div
    class="absolute inset-0 bg-cover bg-center filter brightness-75"
    style={`background-image: url('${imageUrl}');`}
  ></div>

  <!-- Overlay content -->
  <div class="relative z-10 max-w-2xl px-6">
    <h1 class="text-5xl md:text-6xl font-bold text-white mb-4 leading-tight">
      {title}
    </h1>
    <p class="text-lg md:text-xl text-white/80 mb-8">
      {subtitle}
    </p>
    <a
      href={ctaLink}
      class="inline-block bg-clinicBlue text-white font-medium px-8 py-3 rounded shadow-lg hover:shadow-xl hover:-translate-y-1 transition"
    >
      {ctaText}
    </a>
  </div>
</section>
