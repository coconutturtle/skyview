---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Skyview Eye Clinic — Excellence in Vision Care',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Book Appointment',
        href: '/contact#booking',
        target: '_self',
        icon: 'tabler:calendar-event',
      },
      { text: 'Explore Services', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Skyview Clinic reception area' }}
  >
    <Fragment slot="title">
      Clear Vision. Compassionate Care.
      <span class="hidden xl:inline"> Trusted Eye Experts</span>
      <span class="text-accent dark:text-white"> at Skyview Clinic</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Skyview Eye Clinic</span> provides advanced diagnostics and personalized treatments —
        from checkups to surgery.
      </span>
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Now accepting new patients</span>
      Walk in or book online. World-class eye care, close to home.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="Our Approach:" description="Personalized care, advanced diagnostics, and lifelong eye health support." />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Services"
    title="What You Get at Skyview Eye Clinic"
    subtitle="Comprehensive care, advanced technology, and a compassionate team — all dedicated to your eye health."
    items={[
      {
        title: 'Comprehensive Eye Exams',
        description: 'In-depth vision and eye health assessments tailored to your unique needs.',
        icon: 'tabler:eye',
      },
      {
        title: 'Cataract Evaluation & Care',
        description: 'Diagnosis, pre-op planning, and post-op follow-up for cataract patients.',
        icon: 'tabler:eyeglass',
      },
      {
        title: 'Pediatric Eye Care',
        description: 'Gentle exams and treatments for infants, children, and teens.',
        icon: 'tabler:baby-carriage',
      },
      {
        title: 'Surgical Consultations',
        description: 'Expert guidance on LASIK, cataract, and glaucoma surgeries.',
        icon: 'tabler:scissors',
      },
      {
        title: 'Urgent Care for Eye Injuries',
        description: 'Prompt evaluation and treatment of sudden eye problems or trauma.',
        icon: 'tabler:alert-triangle',
      },
      {
        title: 'Vision Therapy & Follow-up',
        description: 'Ongoing support for vision correction and post-surgical recovery.',
        icon: 'tabler:repeat',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Our Philosophy"
    title="Where Clarity Meets Compassionate Care"
    items={[
      {
        title: 'Personalized Attention',
        description:
          'Every patient receives one-on-one care tailored to their needs and lifestyle.',
      },
      {
        title: 'Modern Technology',
        description:
          'We use the latest diagnostic tools for early detection and accurate treatment.',
      },
      {
        title: 'Patient Education',
        description:
          'We empower you with the knowledge to make informed decisions about your vision.',
      },
    ]}
    image={{
      src: 'https://unsplash.com/photos/a-little-girl-getting-her-hair-combed-by-a-man-bV5gWu21it4?auto=format&fit=crop&w=2070&q=80',
      alt: 'Doctor explaining eye scan',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Eye Care with Heart
      </h3>
      Experience a patient-first approach backed by advanced diagnostics.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>


  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Comfortable, Modern Clinic',
        description: `Clean, welcoming spaces designed with your experience in mind.`,
      },
      {
        title: 'Thorough Eye Exams',
        description:
          'We take our time to assess and explain your eye health in detail.',
      },
      {
        title: 'Timely Care',
        description:
          'Efficient service and flexible scheduling, with minimal wait times.',
      },
      {
        title: 'Holistic Eye Health',
        description:
          'We address everything from nutrition and lifestyle to advanced treatment plans.',
      },
    ]}
    image={{
      src: 'https://unsplash.com/photos/medical-eye-test-0are122T4ho?auto=format&fit=crop&w=2070&q=80',
      alt: 'Modern eye care clinic',
    }}
  >
    <Fragment slot="content">
      Expect attentive service, every step of the way.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>


  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Trusted by Families',
        description:
          'From first eye checks to senior care, we’re here for every generation.',
      },
      {
        title: 'Transparent Communication',
        description:
          'We explain conditions and treatment options in clear, everyday language.',
      },
      {
        title: 'Follow-up and Support',
        description:
          'Ongoing care doesn’t end after your visit — we’re available when you need us.',
      },
      {
        title: 'Community-Centered',
        description:
          `Locally owned and operated. We're proud to serve our neighbors.`,
      },
    ]}
    image={{
      src: 'https://unsplash.com/photos/glasses-sit-on-an-eye-chart-LsVix48R7hs?auto=format&fit=crop&w=2070&q=80',
      alt: 'Happy patients after eye exams',
    }}
  >
    <Fragment slot="content">
      We build trust through care, clarity, and results.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>


  <!-- Steps Widget ****************** -->

  <Steps
    title="Your Eye Care Journey at Skyview is Simple and Seamless"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Book Your Appointment</span>',
        description:
          "Use our easy online system to schedule a visit — no referral needed. Choose a time that works for you, and you're all set.",
        icon: 'tabler:calendar-event',
      },
      {
        title: 'Step 2: <span class="font-medium">Meet Your Specialist</span>',
        description:
          "Our team will guide you through a thorough eye exam, answer your questions, and discuss next steps if needed.",
        icon: 'tabler:stethoscope',
      },
      {
        title: 'Step 3: <span class="font-medium">Get Personalized Care</span>',
        description:
          "Whether it's new lenses, follow-up, or surgery planning, we tailor everything to your needs and lifestyle.",
        icon: 'tabler:heart-handshake',
      },
      {
        title: 'That’s it!',
        description: 'Clear vision, compassionate care — from start to finish.',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1588776814219-3c7b5921e27f?auto=format&fit=crop&w=987&q=80',
      alt: 'Steps of eye care',
    }}
  />


  <!-- Features2 Widget ************** -->

  <Features2
  title="What Makes Skyview Different"
  subtitle="We combine modern eye care with human-centered service"
  tagline="Our Strengths"
  items={[
    {
      title: 'Experienced Doctor',
      description: 'Over 15 years of specialist eye care in Johor Bahru.',
      icon: 'tabler:user-star',
    },
    {
      title: 'Modern Equipment',
      description: 'We use cutting-edge diagnostic and imaging tools for accurate, early detection.',
      icon: 'tabler:device-desktop-analytics',
    },
    {
      title: 'Warm, Friendly Staff',
      description: 'Our team makes you feel at home — from reception to follow-up.',
      icon: 'tabler:users-group',
    },
    {
      title: 'Family-Friendly Care',
      description: 'From kids to seniors, we adapt our approach for every age group.',
      icon: 'tabler:home-heart',
    },
    {
      title: 'Clear Communication',
      description: 'We take the time to explain your condition and treatment options in plain language.',
      icon: 'tabler:message-chatbot',
    },
    {
      title: 'Easy Online Booking',
      description: 'Schedule appointments from your phone or laptop — anytime, anywhere.',
      icon: 'tabler:calendar-event',
    },
    {
      title: 'Follow-up Support',
      description: 'Post-visit care and reminders ensure your treatment continues smoothly.',
      icon: 'tabler:repeat',
    },
    {
      title: 'Central Location',
      description: 'Conveniently located and easily accessible by public or private transport.',
      icon: 'tabler:map-pin',
    },
    {
      title: 'Trusted by the Community',
      description: 'Hundreds of happy patients and glowing reviews speak for themselves.',
      icon: 'tabler:thumb-up',
    },
  ]}>

  <Fragment slot="bg">
    <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
  </Fragment>
</Features2>



  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="From the Eye Health Blog"
    information={`Explore tips and expert advice on keeping your eyes healthy at every age.
                  From screen-time guidance to post-surgery care — our articles are here to help you see clearly and live comfortably.`}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Answers to common questions about appointments, exams, and clinic services."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Do I need a referral to book an eye exam?',
        description:
          'No referral is needed. You can book directly through our website or by phone. We welcome both new and returning patients.',
      },
      {
        title: 'What should I bring to my appointment?',
        description:
          'Please bring your ID, any current glasses or prescriptions, and your insurance information if applicable.',
      },
      {
        title: 'Do you offer pediatric eye care?',
        description:
          'Yes! We provide gentle and thorough eye exams for children as young as 3 years old.',
      },
      {
        title: 'How long does an eye exam take?',
        description:
          'Most standard exams take 30–45 minutes. Specialized assessments or dilated exams may take longer.',
      },
      {
        title: 'Where is the clinic located?',
        description:
          'Shanthi Eye Clinic and Surgery is conveniently located in Johor Bahru, Malaysia. View our map on the Contact page or search us on Google Maps.',
      },
      {
        title: 'What services do you offer?',
        description:
          'We specialize in comprehensive eye exams, cataract evaluations, glaucoma management, and pediatric eye care.',
      },
    ]}
  />



  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Patients Served', amount: '4,000+' },
      { title: 'Years in Practice', amount: '15+' },
      { title: 'Surgeries Performed', amount: '800+' },
      { title: 'Annual Consultations', amount: '300–500' },
    ]}
  />



  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Book Your Appointment',
        href: '/booking',
        target: '_self',
        icon: 'tabler:calendar-event',
      },
    ]}
  >
    <Fragment slot="title">
      Clearer Vision Starts&nbsp;Here<br class="block sm:hidden" /><span class="sm:whitespace-nowrap">at Skyview Clinic</span>
    </Fragment>

    <Fragment slot="subtitle">
      Take the first step toward better eye health today.<br class="hidden md:inline" />
      Simple booking, expert care, and a team that puts you first.
    </Fragment>
  </CallToAction>
</Layout>
