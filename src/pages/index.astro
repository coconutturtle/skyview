---
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/Hero.astro";
---

<MainLayout title="Skyview Eye Clinic – Excellence in Vision Care">
  <!-- Hero Section -->
  <Hero
    title="Clear Vision, Compassionate Care"
    subtitle="World‑class eye care with a personal touch."
    ctaText="Book Your Visit"
    ctaLink="/booking"
    imageUrl="/images/hero.jpg"
  />

  <!-- Services Preview -->
  <section class="py-16 bg-clinicLight">
    <div class="max-w-7xl mx-auto px-6">
      <h2 class="text-3xl font-bold text-center text-clinicBlue mb-12">
        Our Services
      </h2>
      <div class="grid gap-10 md:grid-cols-2 lg:grid-cols-3">
        <!-- Service Card -->
        <div class="bg-white p-8 rounded-lg shadow hover:shadow-lg transition">
          <h3 class="text-xl font-semibold text-clinicBlue mb-2">
            Comprehensive Eye Exams
          </h3>
          <p class="text-clinicGray">
            In‑depth vision and health assessments for all ages.
          </p>
        </div>
        <!-- ...repeat for other services -->
      </div>
      <div class="text-center mt-10">
        <a
          href="/services"
          class="inline-block text-clinicBlue font-medium hover:underline"
        >
          View all services →
        </a>
      </div>
    </div>
  </section>

  <!-- Booking Callout -->
  <section class="py-20 text-center">
    <div class="max-w-xl mx-auto px-6">
      <h2 class="text-2xl font-semibold text-clinicBlue mb-4">
        Ready to take the next step?
      </h2>
      <p class="text-clinicGray mb-6">
        Schedule your appointment with our friendly team today.
      </p>
      <a
        href="/booking"
        class="inline-block bg-clinicBlue text-white font-medium px-8 py-3 rounded shadow hover:shadow-lg transition"
      >
        Book Now
      </a>
    </div>
  </section>
</MainLayout>
